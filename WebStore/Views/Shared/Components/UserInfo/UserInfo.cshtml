@using WebStore.Domain.Entities.Identity
@inject IViewLocalizer Loc

<div class="shop-menu pull-right">
    <ul class="nav navbar-nav">
        @if (User.IsInRole(Role.Administrator))
        {
            <li><a href="#"><i class="fa fa-key"></i> @Loc["Админка"]</a></li>
        }
        <li><a href="#"><i class="fa fa-user"></i> @User.Identity.Name</a></li>
        <li><a asp-controller="Home" asp-action="Checkout"><i class="fa fa-crosshairs"></i> @Loc["Заказ"]</a></li>
        <li><a asp-controller="Cart" asp-action="Details"><i class="fa fa-shopping-cart"></i> @Loc["Корзина"]</a></li>
        <li><a asp-controller="Account" asp-action="Logout"><i class="fa fa-lock"></i> @Loc["Выход"]</a></li>
    </ul>
</div>