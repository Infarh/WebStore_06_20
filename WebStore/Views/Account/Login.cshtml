@model WebStore.ViewModels.Identity.LoginViewModel
@inject IViewLocalizer Loc

@{
    ViewData["Title"] = Loc["Вход в систему"];
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>@ViewData["Title"]</h2>
                    <form asp-action="Login" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        @Html.HiddenFor(model => model.ReturnUrl)

                        <input asp-for="UserName" placeholder="@Loc["Имя пользователя"]" />
                        <span asp-validation-for="UserName" class="text-danger"></span>

                        <input asp-for="Password" placeholder="@Loc["Пароль"]" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <span>
                            <input asp-for="RememberMe" class="checkbox">
                            <label asp-for="RememberMe"></label>
                        </span>

                        <button type="submit" class="btn btn-default">@Loc["Войти"]</button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->